linkColor = #f35757

.me
    margin-top: 30px
    display: flex
    justify-content: flex-start
    min-height: 300px
    flex-direction: column
    
    .me-title
        font-size: 2.5rem
        margin-bottom: 15px

    .me-subtitle
        font-size: 2rem
        margin-bottom: 15px
        border-bottom: 1px solid #999999

    .me-resume
        font-size: 1.2rem

    .me-link
        color: linkColor
        text-decoration: none
        font-weight: bold

    .link:hover
        text-decoration: underline

    .me-list
    .me-text
        font-size: 1.1rem