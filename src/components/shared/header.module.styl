colorRoute = #333333

.header
    padding: 20px 10px
    width: 40%
    max-width: 800px
    margin: 0 auto

    .nav
        display: flex
        justify-content: space-between
        align-items: center

        .brand
            margin: 0
            padding: 0
            display: flex
            align-items: center
            text-decoration: none

            .brand-figure
                margin: 0

                .brand-logo
                    width: 20px
                    margin-right: 10px
            
            .brand-title
                color: #0f0f0f
                font-weight: 700
                font-size: 1.1rem

        .header-links
            display: flex
            justify-content: flex-end

            .header-link
                margin-right: 2rem
                list-style: none

                .header-route
                    text-decoration: none
                    color: colorRoute
                    font-weight: bold

                    &:hover
                        color #111111


@media (max-width: 1800px)
    .header
        width: 45%
    
@media (max-width: 1400px)
    .header
        width: 55%

@media (max-width: 1000px)
    .header
        width: 65%
        
        .nav
            .header-links
                    .header-link
                        margin-right: 1.2rem

@media (max-width: 800px)
    .header
        width: 90%